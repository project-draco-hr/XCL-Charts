{
  if (null == canvas)   return;
  if (0 == legend.length() || "" == legend)   return;
  int legendTextHeight=DrawHelper.getInstance().getTextWidth(mPaintRightLegend,legend);
  float legendTextStartX=(float)Math.round(right - mPaintRightLegend.getTextSize());
  float legendTextStartY=(float)Math.round(top + (bottom - top - legendTextHeight) / 2);
  int legendCharHeight=0;
  for (int i=0; i < legend.length(); i++) {
    legendCharHeight=DrawHelper.getInstance().getTextWidth(mPaintRightLegend,legend.substring(i,i + 1));
    DrawHelper.getInstance().drawRotateText(legend.substring(i,i + 1),legendTextStartX,legendTextStartY,90,canvas,mPaintRightLegend);
    legendTextStartY+=legendCharHeight;
  }
}
