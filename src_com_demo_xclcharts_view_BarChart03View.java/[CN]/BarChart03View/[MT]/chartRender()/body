{
  try {
    chart.setChartRange(0.0f,0.0f,getScreenWidth(),getScreenHeight());
    if (chart.isVerticalScreen()) {
      chart.setPadding(15,20,8,10);
    }
 else {
      chart.setPadding(20,20,10,8);
    }
    chart.setChartTitle("????????? - ??????????????????");
    chart.setChartSubTitle("(XCL-Charts Demo)");
    chart.setDataSource(chartData);
    chart.setLabels(chartLabels);
    chart.setDesireLines(mDesireLineDataSet);
    chart.getLegend().setLeftLegend("??????");
    chart.getLegend().setLowerLegend("??????");
    chart.getDataAxis().setAxisMax(100);
    chart.getDataAxis().setAxisMin(0);
    chart.getDataAxis().setAxisSteps(5);
    chart.getDataAxis().setDetailModeSteps(4);
    chart.getPlotGrid().showHorizontalLines(true);
    chart.getDataAxis().setLabelFormatter(new IFormatterTextCallBack(){
      @Override public String textFormatter(      String value){
        Double tmp=Double.parseDouble(value);
        DecimalFormat df=new DecimalFormat("#0");
        String label=df.format(tmp).toString();
        return (label);
      }
    }
);
    chart.getBar().setItemLabelsVisible(true);
    chart.setItemLabelFormatter(new IFormatterDoubleCallBack(){
      @Override public String doubleFormatter(      Double value){
        DecimalFormat df=new DecimalFormat("#0");
        String label=df.format(value).toString();
        return label;
      }
    }
);
    chart.setPlotKeyVisible(false);
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
