{
  super.onDraw(canvas);
  Paint paint=new Paint();
  Paint linepaint=new Paint();
  paint.setStyle(Paint.Style.FILL);
  paint.setAntiAlias(true);
  paint.setColor(Color.rgb(25,156,240));
  if (mp)   paint.setTextSize(Integer.parseInt(getResources().getString(R.string.textsize)));
 else   paint.setTextSize(Integer.parseInt(getResources().getString(R.string.textsizesmall)));
  paint.setStrokeWidth(1);
  linepaint.setStyle(Paint.Style.FILL);
  linepaint.setAntiAlias(true);
  linepaint.setColor(Common.xScaleColor);
  linepaint.setTextSize(16);
  linepaint.setStrokeWidth(3);
  drawCurve(canvas);
}
