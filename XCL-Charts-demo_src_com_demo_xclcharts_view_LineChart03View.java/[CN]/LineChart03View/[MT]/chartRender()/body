{
  try {
    setLayerType(View.LAYER_TYPE_SOFTWARE,null);
    chart.setCategories(labels);
    chart.setDataSource(chartData);
    chart.getDataAxis().setAxisMax(100);
    chart.getDataAxis().setAxisSteps(10);
