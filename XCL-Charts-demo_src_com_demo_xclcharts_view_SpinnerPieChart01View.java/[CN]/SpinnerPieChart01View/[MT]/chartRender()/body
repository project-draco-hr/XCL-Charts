{
  try {
    initChart(mChartStyle);
    int[] ltrb=getPieDefaultSpadding();
    mChart.setPadding(ltrb[0],ltrb[1],ltrb[2],ltrb[3]);
    mChart.setDataSource(chartData);
    mChart.setInitialAngle(90);
    mChart.getPlotLegend().hide();
  }
 catch (  Exception e) {
