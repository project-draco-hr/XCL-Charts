{
  if (null == canvas)   return;
  if ("" == axisTitle || 0 == axisTitle.length())   return;
  double axisTitleTextHeight=DrawHelper.getInstance().getPaintFontHeight(getLowerAxisTitlePaint());
  float axisTitleTextStartX=(float)Math.round(left + (right - left) / 2);
  double axisTitleY=MathHelper.getInstance().sub(mChart.getBottom(),axisTitleTextHeight / 2);
  DrawHelper.getInstance().drawRotateText(axisTitle,axisTitleTextStartX,(float)axisTitleY,0,canvas,getLowerAxisTitlePaint());
}
