{
  try {
    chart.getDataAxis().hide();
    chart.getPlotLegend().hide();
    int[] ltrb=getBarLnDefaultSpadding();
    for (int i=8; i > 0; i--) {
      Thread.sleep(100);
      chart.setPadding(ltrb[0],i * ltrb[1],ltrb[2],ltrb[3]);
      if (1 == i) {
        drawTitle();
        drawDyLegend();
      }
      postInvalidate();
    }
  }
 catch (  Exception e) {
    Thread.currentThread().interrupt();
  }
}
