    chart.getPlotTitle().getChartSubTitlePaint().setColor(Color.WHITE);
    chart.setLablesDisplay(XEnum.DisplayPostion.OUTSIDE);
    chart.render();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
