{
  mPaintAxis=new Paint();
  mPaintTickMarks=new Paint();
  mPaintAxisTickLabel=new Paint();
  mPaintAxis.setColor(Color.BLACK);
  mPaintAxis.setStrokeWidth(mAxisLineWidth);
  mPaintTickMarks.setColor(Color.BLACK);
